$(document).ready(function(){
	// Add Item Dialog
	$("#new_item_form").dialog({ autoOpen: false ,
									modal: true ,
									position: ['center','center'],
									draggable: true,
									resizable: false,
									width: 500,
									height:'auto',
									buttons: [
										{
											text: "Add",
											click: function(){
												if(typeof addItemFunc == "function"){
													addItemFunc();
												}else{
													$(this).dialog("close"); 
												}
											}
										},
										{
											text: "Close",
											click: function(){
												$(this).dialog("close");
											}
										}
									],
									open: function(event, ui) {
									},
									close: function(event, ui) {
											$("#new_item_error").html("");
											$("#new_item_error").css("display", "none");
										} 
									});
	
	// Edit Item Dialog
	$("#edit_item_form").dialog({ autoOpen: false ,
									modal: true ,
									position: ['center','center'],
									draggable: true,
									resizable: false,
									width: 500,
									height:'auto',
									buttons: {
										Update:function(){
											$(this).css("default");
											if(typeof editItemFunc == "function"){
												editItemFunc();
											}else{
												$(this).dialog("close");
											}
										},
										Close:function(){
											$(this).dialog("close");
										}
									},
									open: function(event, ui) {
									},
									close: function(event, ui) {
											$("#edit_item_error").html("");
											$("#edit_item_error").css("display", "none");
										} 
									});
	
	// Delete Item Dialog
	$("#del_item_form").dialog({ autoOpen: false ,
									modal: true ,
									position: ['center','center'],
									draggable: true,
									resizable: false,
									width: 400,
									buttons: [
										{
											text: "Yes",
											click: function(){
												if(typeof delItemFunc == "function"){
													delItemFunc();
												}else{
													$(this).dialog("close");
												}
											}
										},
										{
											text: "No",
											click: function() { $(this).dialog("close"); }
										}
									],
									close: function(event, ui) {
											$("#del_item_error").html("");
											$("#del_item_error").css("display", "none");
										} 
									});
	
	$("#button_add").button().click(function(){
		$("#new_item_form").css('visibility','visible');
		$("#new_item_form").dialog("open");
	});
	
	getPageData();
});
